<!doctype html>
<html>
  <head>
    <title>Hue Connect - <%= HueConnect::VERSION %></title>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <% css_imports = css :application, :media => 'screen' %>
	<% js_imports =  js  :application %> 
	<%# Must modify sinatra-assetpack output to use the Mount prefix when embedding through Rails %>
    <% if path_prefix %>
	  <%= css_imports.gsub(/href='/, "href='#{path_prefix}") %>
      <%= js_imports.gsub(/src='/, "src='#{path_prefix}") %>
    <% end %>
  </head>
  <body>
	<!-- Header -->
	<div class="navbar">
	  <div class="navbar-inner">
	    <div class="container">
			<a class="brand" href="<%= u("/") %>">Hue Connect - <%= HueConnect::VERSION %></a>
		</div>
	  </div>
	</div>
	
	<div class="container">
		
		<% message = notice_message %>
		<% if message and not message.empty? %>
			<div id='flash' class='notice'>
				<div class="row">
					<div class="span12">
						<div class="alert alert-success">
						 <h4 class="alert-heading">Notice:</h4>
						  <%= message %>
						</div>
					</div>
				</div>		
			</div>
		<% end %>
		
		<%= yield %>


		<!-- Footer -->
		<div class="row">
			<div class="span12"><hr/></div>
		</div>		
		<div class="row">
 		  <div class="span4">&nbsp;</div>
		  <div class="span4">
		      Powered by <a href="http://github.com/denniskuczynski/hue_connect">Hue Connect</a>
		  </div>
 		  <div class="span4">&nbsp;</div>
		</div>
	</div>
  </body>
</html>